    "minimum-stability": "stable",
    "require": {
        "symfony/event-dispatcher": "~2"
    },
    "require-dev": {
        "pear-pear.phpunit.de/phpunit": "3.6.*"
    },
    "repositories": [
        {
            "type": "pear",
            "url":  "pear.phpunit.de"
        },
        {
